<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3C5FA6"
    tools:context=".LoginScreen">

    <TextView
        android:id="@+id/Facebook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="sans-serif-black"
        android:text="facebook"
        android:textColor="#f5f5fa"
        android:textSize="50sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up for Facebook"
        android:textColor="#f5f5fa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        app:layout_constraintTop_toBottomOf="@id/Login"
        android:gravity="center" />

    <TextView
        android:id="@+id/HelpCenter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Help Center"
        android:textColor="#f5f5fa"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="28dp"
        app:layout_constraintTop_toBottomOf="@id/SignUp"
        android:gravity="center" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_password"
        android:padding="16dp"
        android:hint="Password"
        android:textColorHint="@android:color/darker_gray"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@id/Username"
        android:layout_marginTop="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <EditText
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_username"
        android:hint="Email or phone number"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/Facebook"
        android:layout_marginTop="16dp"
        android:textColorHint="@android:color/darker_gray"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <Button
        android:id="@+id/Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password"
        android:layout_marginTop="8dp"
        android:backgroundTint="#536FA6"
        android:hint="Log In"
        android:textColorHint="#f5f5fa"
        android:textSize="22sp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:paddingTop="13dp"
        android:paddingBottom="13dp"/>



</androidx.constraintlayout.widget.ConstraintLayout>